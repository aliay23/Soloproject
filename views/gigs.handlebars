<section id="gigs" class="container">
    <h1>All Gigs</h1>

    {{#each gigs}}
      <div class="gig">
      <h3>{{title}}</h3>
      <p>{{description}}</p>
      <ul>
        <li>Budget: {{budget}}</li>
        <li><a href="/login" class="btn btn-reverse">Apply Now</a></li>
      </ul>
      <div class="tech">
        <small>Technologies Needed: <span>{{technologies}}</span></small>
        <form method="POST" action="/gigs/add_method=DELETE">
  <button type="submit">Delete</button>
</form>
      </div>
    </div>
    {{else}}
      <p>No gigs available</p>
    {{/each}}
    
  </section>